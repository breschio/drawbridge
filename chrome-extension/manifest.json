{
  "manifest_version": 3,
  "name": "Drawbridge - Visual editor for AI coding assistants",
  "version": "1.1.0",
  "description": "Visual feedback tool: Annotate browser pages and send UI feedback to Cursor/Claude Code as AI prompts",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com;"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "html2canvas.min.js",
        "utils/persistence.js",
        "utils/taskStore.js",
        "utils/markdownGenerator.js",
        "utils/migrateLegacyFiles.js",
        "content_script.js",
        "moat.js"
      ],
      "css": ["moat.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Drawbridge",
    "default_icon": {
      "16": "icons/drawbridge-icon-light-16.png",
      "48": "icons/drawbridge-icon-light-48.png",
      "128": "icons/drawbridge-icon-light-128.png"
    }
  },
  "icons": {
    "16": "icons/drawbridge-icon-light-16.png",
    "48": "icons/drawbridge-icon-light-48.png",
    "128": "icons/drawbridge-icon-light-128.png",
    "512": "icons/drawbridge-icon-light-512.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/drawbridge-icon-dark.svg",
        "icons/drawbridge-icon-light.svg",
        "rules-templates/drawbridge-workflow.md",
        "rules-templates/README.md",
        "rules-templates/bridge.md"
      ],
      "matches": ["<all_urls>"]
    }
  ]
} 